<script class="pop-up-js">
  // Sélectionner tous les éléments avec la classe .video-link
  var videoLinks = document.querySelectorAll('.video-link');

  // Ajouter un événement de clic à chaque élément
  videoLinks.forEach(function(videoLink) {
    videoLink.addEventListener('click', function(event) {
      event.preventDefault();
      var videoUrl = this.href;
      document.getElementById('video-popup').style.display = 'block';
      document.querySelector('#video-popup iframe').src = videoUrl;
    });
  });

  // Le reste du code pour fermer le pop-up reste le même
  document.querySelector('.close-btn').addEventListener('click', function() {
    closeVideoPopup();
  });

  document.getElementById('video-popup').addEventListener('click', function(event) {
    if (event.target === this) {
      closeVideoPopup();
    }
  });

  // Fonction pour fermer le pop-up
  function closeVideoPopup() {
    document.getElementById('video-popup').style.display = 'none';
    document.querySelector('#video-popup iframe').src = '';
  }
</script>

