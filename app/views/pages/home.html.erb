<script>
  var topNavbar = document.querySelector('.navbar-lewagon'); // Sélecteur de la barre de navigation supérieure
  var prevScrollY = window.scrollY; // Position de défilement précédente

  // Écouter l'événement de défilement de la fenêtre
  window.addEventListener('scroll', function() {
  var currentScrollY = window.scrollY; // Position de défilement actuelle
  var scrollDirection = currentScrollY > prevScrollY ? 'down' : 'up'; // Direction de défilement

  // Animer la barre de navigation supérieure en fonction de la direction de défilement
  if (scrollDirection === 'down') {
    topNavbar.style.top = '-100px'; // Masquer la barre de navigation en dehors de l'écran
  } else {
    topNavbar.style.top = '0'; // Afficher la barre de navigation
  }

  prevScrollY = currentScrollY; // Mettre à jour la position de défilement précédente
  });
</script>

<script>
  // Script pour afficher/masquer le bouton en fonction du défilement de la page
  window.onscroll = function() {
